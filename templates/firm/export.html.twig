{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>Titles by {{ firm }} <small>in {{ format|upper }} format</small></h1>
{% endblock %}

{% block body %}
    <p>There are {{ firmRoles|length }} titles associated with this firm.<p>
    <div class="list-group citations">
        {% for tfr in firmRoles %}
            {% set title = tfr.title %}
            <div class="list-group-item citation">{{ include('partial/citation/' ~ format ~ '.html.twig', {'title': title}) }}</div>
        {% endfor %}
    </div>
{% endblock %}
