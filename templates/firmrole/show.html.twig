{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>Firm Role</h1>
{% endblock %}

{% block body %}


            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <div class="btn-toolbar">
                <div class="btn-group pull-right">
                <a href="{{ path('firmrole_edit', { 'id': firmrole.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit Firm Role
                </a>
                <a href="{{ path('firmrole_delete', { 'id': firmrole.id }) }}" class="btn btn-default"
                   data-confirm="Are you sure you want to delete this Firmrole?">
                    <span class='glyphicon glyphicon-remove'></span> Delete Firm Role
                </a>
                </div>
                </div>
            {% endif %}


    {% embed 'partial/table.html.twig' %}
        {% block tbody %}
            <tr>
                <th>Name</th>
                <td>{{ firmrole.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ firmrole.description|raw }}</td>
            </tr>
        {% endblock %}
    {% endembed %}

    <h2>Firms</h2>
    {% embed 'partial/table.html.twig' %}
        {% set entities = titleFirmRoles %}
        {% block thead %}
            <tr>
                <th>Firm</th>
                <th>Title</th>
            </tr>
        {% endblock %}
        {% block tbody %}
            {% for tfr in titleFirmRoles %}
                <tr>
                    <td>
                        <a href="{{ path('firm_show', {'id': tfr.firm.id}) }}">
                            {{ tfr.firm }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('title_show', {'id': tfr.title.id}) }}">
                            {{ tfr.title }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}

{% endblock %}
