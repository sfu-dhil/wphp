{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>{{ format }}</h1>
{% endblock %}

{% block body %}


            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <div class="btn-toolbar">
                <div class="btn-group ms-auto">
                <a href="{{ path('format_edit', { 'id': format.id }) }}" class="btn btn-default">
                    <span class='bi bi-pencil-square'></span> Edit Format
                </a>
                <a href="{{ path('format_delete', { 'id': format.id }) }}" class="btn btn-default"
                   data-confirm="Are you sure you want to delete this Format?">
                    <span class='bi bi-trash'></span> Delete Format
                </a>
                </div>
                </div>
            {% endif %}

    {% embed 'partial/table.html.twig' %}
        {% block tbody %}
            <tr>
                <th data-bs-toggle="popover" data-bs-content="Binding format name">Name</th>
                <td>{{ format.name }}</td>
            </tr>
            <tr>
                <th data-bs-toggle="popover" data-bs-content="Binding format abbreviated alphanumerically">Abbreviation</th>
                <td>{{ format.abbreviation }}</td>
            </tr>
            <tr>
                <th data-bs-toggle="popover" data-bs-content="Binding format description">Description</th>
                <td>{{ format.description|raw }}</td>
            </tr>
        {% endblock %}
    {% endembed %}

    {% include 'title/partial/page.html.twig' with {'titles': titles} %}


{% endblock %}
