{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>Explore Formats</h1>
{% endblock %}

{% block body %}
    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('format_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> Add Format
                </a>
            {% endif %}
        </div>
    </div>
    {% embed 'partial/table.html.twig' %}
        {% set entities = formats %}
        {% block thead %}
            <tr>
                <th>Name</th>
                <th>Abbreviations</th>
                <th>Description</th>
                <th>Titles</th>
            </tr>
        {% endblock %}
        {% block tbody %}
            {% for format in formats %}
                <tr>
                    <td>
                        <a href="{{ path('format_show', { 'id': format.id }) }}">
                            {{ format.name }}
                        </a>
                    </td>
                    <td>{{ format.abbreviation }}</td>
                    <td>{{ format.description|raw }}</td>
                    <td>
                        <a href="{{ path('format_show', { 'id': format.id }) }}">
                            {{ repo.countTitles(format, app.user) }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}

{% endblock %}
