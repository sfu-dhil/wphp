{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>{{ source }}</h1>
{% endblock %}

{% block body %}


            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <div class="btn-toolbar">
                <div class="btn-group pull-right">
                <a href="{{ path('source_edit', { 'id': source.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit Source
                </a>
                <a href="{{ path('source_delete', { 'id': source.id }) }}" class="btn btn-default"
                   data-confirm="Are you sure you want to delete this Source?">
                    <span class='glyphicon glyphicon-remove'></span> Delete Source
                </a>
                </div>
                </div>
            {% endif %}

    {% embed 'partial/table.html.twig' %}
        {% block tbody %}
            <tr>
                <th>Name</th>
                <td>{{ source.name }}</td>
            </tr>
            <tr>
                <th>Online Source</th>
                <td>
                    {% if source.onlineSource %}
                        <a href="{{ source.onlineSource }}">{{ source.onlineSource }}</a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ source.description|raw }}</td>
            </tr>
            <tr>
                <th>Citation</th>
                <td>{{ source.citation|raw }}</td>
            </tr>
        {% endblock %}
    {% endembed %}

    {% embed 'title/partial/page.html.twig' with {'titles': titles} %}
    {% endembed %}

{% endblock %}
