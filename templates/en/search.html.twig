{% extends 'base.html.twig' %}

{% block title %}English Novel List{% endblock %}

{% block pageheader %}
    <h1>Search the English Novel Bibliography</h1>
{% endblock %}

{% block body %}

    <form method="get" class="form-horizontal" action="{{ path('resource_en_search') }}">
        <fieldset>
            <legend>Search the English Novel records</legend>
            <div class="form-group">
                <label class='col-sm-2 control-label' for='q'>Search term</label>
                <div class='input-group'>
                    <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit">
                            <span class='glyphicon glyphicon-search'></span>
                            Search
                        </button>
                    </span>
                </div>
                <p class="help-block col-sm-offset-2">Search the records by title or author.</p>
            </div>
        </fieldset>
    </form>

    {% if ens|length %}
        {% embed 'partial/table.html.twig' %}
            {% set entities = ens %}
            {% block thead %}
                <tr>
                    <th>ID</th>
                    <th>Year</th>
                    <th>Author</th>
                    <th>Title</th>
                </tr>
            {% endblock %}
            {% block tbody %}
                {% for en in ens %}
                    <tr>
                        <td>
                            <a href="{{ path('resource_en_show', { 'id': en.id }) }}">
                                {{ en.enId }}
                            </a>
                        </td>
                        <td>{{ en.year }}</td>
                        <td>{{ en.author }}</td>
                        <td>{{ en.title }}</td>
                    </tr>
                {% endfor %}
            {% endblock %}
        {% endembed %}
    {% endif %}

{% endblock %}
