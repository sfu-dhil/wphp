{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>{{ genre }}</h1>
{% endblock %}

{% block body %}
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class="btn-toolbar">
            <div class="btn-group ms-auto">
                <a href="{{ path('genre_edit', { 'id': genre.id }) }}" class="btn btn-default">
                    <span class='bi bi-pencil-square'></span> Edit Genre
                </a>
                <a href="{{ path('genre_delete', { 'id': genre.id }) }}" class="btn btn-default"
                   data-confirm="Are you sure you want to delete this Genre?">
                    <span class='bi bi-trash'></span> Delete Genre
                </a>
            </div>
        </div>
    {% endif %}

    {% embed 'partial/table.html.twig' %}
        {% block tbody %}
            <tr>
                <th>Name</th>
                <td>{{ genre.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ genre.description|raw }}</td>
            </tr>
        {% endblock %}
    {% endembed %}

    {% include 'title/partial/page.html.twig' with {'titles': titles} %}
{% endblock %}
