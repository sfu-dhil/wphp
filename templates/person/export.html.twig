{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>Titles by <em>{{ person }}</em> <small>in {{ format|upper }} format</small></h1>
{% endblock %}

{% block body %}
    <p>There are {{ titles|length }} titles associated with this person.<p>
    <div class="list-group citations">
        {% for tr in titles %}
            {% set title = tr.title %}
            <div class="list-group-item citation">{{ include('partial/citation/' ~ format ~ '.html.twig', {'title': title}) }}</div>
        {% endfor %}
    </div>
{% endblock %}
