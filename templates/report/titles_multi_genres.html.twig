{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>{{ heading }}</h1>
    {% if titles|length > 0 %}
        Displaying {{ titles|length }} titles of {{ titles.getTotalItemCount }} total
        which have 2 or more genres
    {% else %}
        No titles to display.
    {% endif %}
{% endblock %}

{% block body %}
    {{ form_start(search_form, {'attr': { 'class': 'search mt-5'}}) }}
    {{ form_widget(search_form) }}

    <div class="mb-3 row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input type="submit" value="Filter" class="btn btn-primary"/>
        </div>
    </div>
    {{ form_end(search_form) }}

    {% if titles|length > 0 %}
        {% embed 'partial/table.html.twig' %}
            {% set entities = titles %}
            {% block thead %}
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Attempted Verification</th>
                    <th>Verified</th>
                    <th>Genres</th>
                </tr>
            {% endblock %}
            {% block tbody %}
                {% for title in titles %}
                    <tr>
                        <td>
                            <a href="{{ path('title_show', { 'id': title.id }) }}">
                                {{ title.id }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('title_show', { 'id': title.id }) }}">
                                {{ title.title }}
                            </a>
                        </td>
                        <td>{% if title.finalattempt %}Yes{% else %}No{% endif %}</td>
                        <td>{% if title.finalcheck %}Yes{% else %}No{% endif %}</td>
                        <td>
                            {% if title.genres %}
                            <ul>
                                {% for genre in title.genres %}
                                    <li>
                                        <a href='{{ path('genre_show', {'id': genre.id}) }}'>{{ genre }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            {% endblock %}
        {% endembed %}
    {% endif %}

{% endblock %}
