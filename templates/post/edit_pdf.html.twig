{% extends 'base.html.twig' %}

{% block title %}Edit PDF{% endblock %}

{% block body %}
    <h1>Edit PDF</h1>

    <div class='panel panel-default'>
        <div class='panel-heading'>Current PDF</div>
        <div class='panel-body'>
            <img src="{{ path('nines_media_pdf_thumb', {'id': pdf.id}) }}" class="img-thumbnail img-responsive center-block" />
        </div>
    </div>

    {{ form_start(form) }}
    {{ form_row(form.newFile) }}
    {{ form_rest(form) }}
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a href="{{ path('nines_blog_post_show', {'id': entity.id}) }}" class="btn btn-warning">Cancel</a>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
