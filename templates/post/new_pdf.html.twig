{% extends 'base.html.twig' %}

{% block title %}New PDF{% endblock %}

{% block body %}
    <h1>New PDF</h1>
    <p>Use the form below to add an image to {{ entity }}.</p>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="mb-3 row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a href="{{ path('nines_blog_post_show', {'id': entity.id}) }}" class="btn btn-warning">Cancel</a>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
