{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Firm role</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('firmrole_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('firmrole_edit', { 'id': firmrole.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('firmrole_delete', { 'id': firmrole.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Firm?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ firmrole.name }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
