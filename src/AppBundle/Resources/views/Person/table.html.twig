<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Last name</th>
            <th>First name</th>
            <th>Gender</th>
            <th>Date of birth</th>
            <th>Date of death</th>
        </tr>
    </thead>
    <tbody>
        {% for person in people %}
            <tr>
                <td>
                    <a href="{{ path('person_show', { 'id': person.id }) }}">
                        {{ person.id }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('person_show', { 'id': person.id }) }}">
                        {{ person.lastName }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('person_show', { 'id': person.id }) }}">
                        {{ person.firstName }}
                    </a>
                </td>
                <td>{{ person.gender }}</td>
                <td>{% if person.dob %}{{ person.dob }}{% endif %} {{ person.cityOfBirth.name }}</td>
                <td>{% if person.dod %}{{ person.dod }}{% endif %} {{ person.cityOfDeath.name }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
