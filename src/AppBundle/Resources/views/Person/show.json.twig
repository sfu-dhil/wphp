
   {
        
   "@context": "http://schema.org",
   "@type": "Person",

   "url": "{{ url('person_show', {'id': person.id}) }}",
   "familyName": "{{ person.firstName }}",
   "givenName": "{{ person.lastName }}",
   {% if person.title %}
   "jobTitle": "{{ person.title }}",
   {% endif %}
   "birthDate": "{{ person.dob }}",
   "deathDate": "{{ person.dod }}",
   {% if person.gender == 'F' %}
   "gender": "female",         
   {% elseif person.gender == 'M' %}
   "gender": "male",        
   {% else %}
   "gender": "unknown", 
   {% endif %}
       
   "birthPlace": {
   {% if person.cityOfBirth and person.cityOfBirth.geonameid != 0 %}
        "@type": "Place",
        "url": "http://sws.geonames.org/{{ person.cityOfBirth.geonameid }}/about.rdf"
   {% endif %}
       },
       
   "deathPlace": {   
   {% if person.cityOfDeath and person.cityOfDeath.geonameid != 0 %}
        "@type": "Place",
        "url": "http://sws.geonames.org/{{ person.cityOfDeath.geonameid }}/about.rdf"
   {% endif %}
       },
       
   {% for tf in person.titleRoles %}
            
       {% if tf.role.name == 'Author' %}
        "author": "{{ url('title_show', {'id': tf.title.id}) }}",
       {% endif %}
       {% if tf.role.name == 'Publisher' %}
        "publisher": "{{ url('title_show', {'id': tf.title.id}) }}",
       {% endif %}
       {% if tf.role.name == 'Editor' %}
        "editor": "{{ url('title_show', {'id': tf.title.id}) }}",
       {% endif %}
       {% if tf.role.name == 'Translator' %}
         "translator": "{{ url('title_show', {'id': tf.title.id}) }}",
       {% endif %}
       {% if tf.role.name == 'Illustrator' %}
         "illustrator": "{{ url('title_show', {'id': tf.title.id}) }}", 
       {% endif %}
       {% if tf.role.name == 'Engraver' %}
         "contributor": "{{ url('title_show', {'id': tf.title.id}) }}",
       {% endif %}
       {% if tf.role.name == 'Compiler' %}
         "contributor": "{{ url('title_show', {'id': tf.title.id}) }}"
       {% endif %}
   {% endfor %}
   
    }