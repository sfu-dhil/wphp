            
{

   "@context": "http://schema.org",
   "@type": "Organization",
   
   "url": "{{ url('firm_show', {'id': firm.id}) }}",
   
   "name": "{{ firm.name }}",
   "address": "{{ firm.streetAddress }}",
   
   "location": {
   "@type": "Place",
   "url": ""http://sws.geonames.org/{{ firm.city.geonameid }}/about.rdf""
   },

   
   {% if firm.startDate|date('Y') %}
        "foundingDate": "{{ firm.startDate }}",
        {% endif %}
   
   {% if firm.endDate|date('Y')  %}
        "dissolutionDate": "{{ firm.endDate }}",
        {% endif %}
   
   {% for tfr in firm.TitleFirmroles %}
       {% if firm.TitleFirmroles == 'Publisher' %}
        "publisher": "{{ url('title_show', {'id': tfr.title.id}) }}",
       {% elseif firm.TitleFirmroles == 'Printer' %}
        "manifacturer": "{{ url('title_show', {'id': tfr.title.id}) }}",   
       {% elseif firm.TitleFirmroles == 'Bookseller' %}
        "seller": "{{ url('title_show', {'id': tfr.title.id}) }}"  
       {% endif %}
    {% endfor %}

}
