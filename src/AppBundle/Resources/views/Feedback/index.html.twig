{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Feedback List</h1>
    <p class="count">
        Displaying {{ feedbacks|length }} feedbacks of {{ feedbacks.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}
  
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Email</th>
                <th>Content</th>            </tr>
        </thead>
        <tbody>
        {% for feedback in feedbacks %}
            <tr>
                <td>{{ feedback.created | date('M d, Y, H:i') }}</td>
                <td>
                    <a href="{{ path('feedback_show', { 'id': feedback.id }) }}">
                        {{ feedback.name }}
                    </a>
                </td>
                <td>{{ feedback.email }}</td>
                <td>{{ feedback.content }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(feedbacks) }}
    </div>

{% endblock %}
